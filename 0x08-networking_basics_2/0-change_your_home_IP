#!/usr/bin/env bash
# This script changes the IP address resolution for localhost and facebook.com

# Change localhost resolution to 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts

# Change facebook.com resolution to 8.8.8.8
sudo sed -i 's/[0-9]\+\(\.[0-9]\+\)\{3\}/8.8.8.8/g' /etc/hosts

