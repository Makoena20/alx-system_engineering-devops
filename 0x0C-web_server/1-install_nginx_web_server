#!/usr/bin/env bash
# This script installs and configures Nginx web server to serve a "Hello World!" page

# Install Nginx
apt-get update
apt-get -y install nginx

# Create default index.html file
echo "Hello World!" > /usr/share/nginx/html/index.html

# Make sure Nginx is listening on port 80
sed -i 's/^listen.*/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx without using systemctl
/etc/init.d/nginx restart

exit 0

