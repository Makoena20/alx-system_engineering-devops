#!/usr/bin/env bash
# This script sets up the DNS records for techlearning.tech

# Update DNS records with an A entry pointing to web-01 IP address
echo "Updating DNS records..."
echo "techlearning.tech.  IN  A  web-01-IP-address" >> /etc/bind/db.techlearning.tech

# Restart DNS service to apply changes
service bind9 restart

# Verify DNS records
dig techlearning.tech

